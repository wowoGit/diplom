@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Patient" asp-controller="Medcard" asp-action="Index"  title="Manage">Моя Медкарта</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="" asp-controller="Login" asp-action="Logout">
            <button  type="submit" class="nav-link btn btn-link text-dark">Выйти</button>
        </form>
    </li>
}
else
{
    @if (User.IsInRole("Manager"))
    {
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    }
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Login"  asp-action="Login">Login</a>
    </li>
}
</ul>
