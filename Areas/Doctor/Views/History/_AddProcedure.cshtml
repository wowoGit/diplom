@{
}
@using HtmlHelpers.BeginCollectionItemCore;
@using (Html.BeginCollectionItem("HProcedures"))
{
    @Html.HiddenFor(m => m.HistoryId, new { Value = ViewData["HId"]})
    <div id="removeAddMoreProcs" class="col-xs-12 col-sm-12 form-group px-0">
        <div class="row">
            <div class="col-4">
            <div class="form-group">
            <label  class="control-label">Процедура</label>
            <select asp-for="ProcedureId" asp-items="ViewBag.Procedure" class="form-control"  >
                <option disabled selected>Выбрать...</option>
            </select>                
                <span asp-validation-for="Procedure" class="text-danger"></span>
            </div>
            </div>
            <div class="col-7">
            <div class="form-group">
            <label  asp-for="Date" class="control-label">Дата/Время записи</label>
                <input asp-for="Date" class="form-control" />
            </div>
            </div>
            <div class="col-1 px-1">
                <div class="container wh-100 mt-4 pt-1 float-right mx-0 px-0">
                <a class="float-right btn removeDivProc hoverable text-center" ><i class="fa-solid text-danger fa-minus"></i></a>
            </div>
            </div>
        </div>
    </div>
}
<script>
    $(".removeDivProc").click(function () {
        $(this).parents("#removeAddMoreProcs").remove();
    });
</script>

