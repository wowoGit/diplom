                                <a class="dropdown-item" href="#">Action</a>
                                <a class="dropdown-item" href="#">Another action</a>
                                <a class="dropdown-item" href="#">Something else here</a>
                            </div>
                        </div>
                    </div>
                    <h5 class="card-title mb-0">История</h5>
                </div>
                <div class="card-body h-100">

                    @foreach (var item in Model.OrderByDescending(m => m.Appdate))
                    {
                        var diagnosis = item.Diagnosis ?? "Отсутствует";

                        <div class="media">
                            <div class="card bg-light mb-3 w-100">
                                <div class="card-header">
                                    @if (item.AppointmentId != null)
                                    {
                                        <span class="btn-success btn border-radius-5">Завершен</span>
                                    }
                                    else if (item.Appdate.ToLocalTime().AddHours(-3) > DateTime.Now)
                                    {
                                        <span class="btn-warning btn border-radius-5">Ожидается</span>
                                    }
                                    else
                                    {
                                        <span class="btn-danger btn border-radius-5">Пропущен</span>
                                    }
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col">
                                            <div class="row">
                                                <div class="col">
                                                    <h5 class="card-title">Жалоба: <span class="text-muted">@item.Info</span></h5>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col">
                                                    <h5 class="card-title">Диагноз: <span class="text-muted">@diagnosis</span></h5>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-4">
                                                    <p class="card-text mb-0">Дата: <span class="text-muted">@item.Appdate.ToShortDateString()</span></p>
                                                    <p class="card-text">Время: <span class="text-muted">@item.Appdate.ToShortTimeString()</span></p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr>
                    }

